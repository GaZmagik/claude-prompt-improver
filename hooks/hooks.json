{
  "description": "Prompt improvement hooks for automatic prompt classification and enhancement",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/hooks/user-prompt-submit/improve-prompt.ts",
            "timeout": 90
          }
        ]
      }
    ]
  }
}
